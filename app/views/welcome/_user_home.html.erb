
<div class="row">
  <aside id="meniu" class="span3">
    <%= render current_user %>
  </aside>
  <div class="span8 center">
   	<%= form_tag ({:controller => "questions", :action => "create"}), ({:method => :post}) do %>
	    <div class="row">

        <%= label_tag :content %>
        <%= text_field_tag "question[content]" %>

        <%= label_tag :course %>
        <%= hidden_field_tag :user_id, current_user.id %>
        <div>
          <%= select_tag :id, options_for_select(@sections), :class => "dropdown" %>
        </div>
        <div class="row">
          <%= submit_tag "Ask", class: "btn btn-primary btn-large form-btn" %>
        </div>
	 	</div>
  	<% end %>

    <%= render 'shared/feed' %>
  </div>
</div>
