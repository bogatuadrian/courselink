
<div class="center">
  <div class="row">
    <h1>Sign up</h1>
    <%= form_for @user do |f| %>
      <%= render 'shared/input_user_data_errors', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
  </div>

    <div class="row">
      <%= f.submit "Sign up", class: "btn btn-primary btn-large" %>
    </div>
  <% end %>
</div>
