
<div class="center">
  <%= form_for @user do |f| %>
    <div class="row">
    <h1>Edit profile</h1>
      <%= render 'shared/input_user_data_errors', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>

    <div class="row">
      <%= f.submit "Update profile", class: "btn btn-primary btn-large" %>
    </div>
  </div>
  <% end %>
</div>
