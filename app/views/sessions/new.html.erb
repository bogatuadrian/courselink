<% provide :title, 'Sign in' %>

<div class="center">
  <%= form_for(:session, url: sessions_path) do |f| %>
    <div class="row">
    <h1>Sign in</h1>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

    <div class="row">
      <%= f.submit "Sign in", class: "btn btn-large btn-primary form-btn" %>
    </div>
  </div>
  <% end %>
  <div class="row center">
    <p>New user? <%= link_to "Register now", signup_path %></p>
  </div>
</div>
